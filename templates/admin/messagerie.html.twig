{% extends 'admin/base.html.twig' %}

{% block title %} <title>Nouveaux Messages</title>{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Nouveaux Messages</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>De</th>
                <th>Sujet</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for message in messages %}
                <tr {% if message.isRead %}class="table-secondary"{% endif %}>
                    <td>{% if message.isRead %} <span style="color:darkred;">Lu</span> <img src="{{ asset('images/back/check-mark.png')}}" style="width:10px; height:10px;"> | {% endif %} {{ message.user.firstName }} {{ message.user.lastName }}</td>
                    <td>{{ message.subject }}</td>
                    <td>{{ message.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('admin_message_read', {'id': message.id}) }}" class="btn btn-primary">Voir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}