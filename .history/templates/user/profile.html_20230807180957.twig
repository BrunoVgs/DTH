{% extends 'base.html.twig' %}

{% block title %}Mon profile{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/profile.css') }}">

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                <span class="font-weight-bold">{{ user.getFirstname() }} {{ user.getLastname() }}</span>
                <span class="text-black-50">{{ user.getEmail() }}</span>
                <span> </span>
            </div>
        </div>
        <div class="col-md-7">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Mon profile</h4>
                </div>
                <form method="POST" action="{{ path('user_profile_update') }}">
                    <div class="row mt-2">
                        <div class="col-md-6 mb-3">
                            <label class="labels">Nom</label>
                            <input type="text" name="lastname" class="form-control" placeholder="Nom" value="{{ user.getLastname() }}">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="labels">Prénom</label>
                            <input type="text" name="firstname" class="form-control" placeholder="Prénom" value="{{ user.getFirstname() }}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="labels">Adresse</label>
                            <input type="text" name="address" class="form-control" placeholder="Adresse" value="{{ user.getAdress() }}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="labels">Code Postal</label>
                            <input type="text" name="postal_code" class="form-control" placeholder="Code Postal" value="{{ user.getPostalCode() }}">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="labels">Commune</label>
                            <input type="text" name="city" class="form-control" value="{{ user.getCity() }}" placeholder="Commune">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="labels">Poids</label>
                            <input type="text" name="weight" class="form-control" placeholder="Poids" value="{{ user.getWeight() }}">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="labels">Taille</label>
                            <input type="text" name="height" class="form-control" value="{{ user.getHeight() }}" placeholder="Taille">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="labels">Numéro de téléphone</label>
                            <input type="text" name="phone_number" class="form-control" placeholder="Numéro de téléphone" value="{{ user.getPhoneNumber() }}">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="labels">Age</label>
                            <input type="text" name="age" class="form-control" value="{{ user.getAge() }}" placeholder="Age">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="labels">Email</label>
                            <input type="text" name="email" class="form-control" placeholder="Email" value="{{ user.getEmail() }}">
                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <input type="hidden" name="_method" value="PUT">
                        <button class="btn btn-primary profile-button" type="submit">Sauvegarder</button>
                    </div>
                </form>
            </div>
        </div>
       <!-- La liste des donations -->
        <div class="col-md-2">
            <div class="p-3 py-5 donations-section">
                <div class="col-md-12 mb-3">
                    <label class="labels">Donations :</label>
                    {% if donations is not empty %}
                        <div class="row">
                            <ul class="donations-list">
                                {% for donation in donations %}
                                    <li>{{ loop.index }}E DONATION LE {{ donation.date|date('d/m/Y') }} AU {{ donation.collectionCenter }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p class="no-donations-message">Aucune donation trouvée</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% endblock %}
