{% extends 'admin/base.html.twig' %}

{% block body %}
<div class='container-fluid'>
    <h1>Liste des donations</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Prénom du donneur</th>
                <th>Nom du donneur</th>
                <th>Centre de collecte</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for donation in donations %}
                <tr>
                    <td>{{ donation.date|date('d/m/Y') }}</td>
                    <td>{{ donation.donorFirstname }}</td>
                    <td>{{ donation.donorLastname }}</td>
                    <td>{{ donation.collectioncenter }}</td>
                    <td>
                        <!-- Edit link with logo -->
                        <a href="#" class="edit">
                            <img src="{{ asset('images/back/edit.png') }}" alt="Edit" width="25" height="25" style="margin-right: 15px; margin-left:10px">
                        </a>
                        <a href="#" class="delete" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette donation ?')">
                            <img src="{{ asset('images/back/delete.png') }}" alt="Edit" width="25" height="25" >
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
