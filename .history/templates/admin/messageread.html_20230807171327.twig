{% extends 'admin/base.html.twig' %}

{% block title %}<title> Message </title> {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Message</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">De : {{ message.user.firstName }} {{ message.user.lastName }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Sujet : {{ message.subject }}</h6>
            <p class="card-text">{{ message.content }}</p>
            <p class="card-text">Date : {{ message.createdAt|date('d/m/Y H:i') }}</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('admin_message') }}" class="btn btn-secondary">Retour</a>
        <a href="{{ path('admin_message_reply', {'id': message.id}) }}" class="btn btn-primary">Répondre</a>
    </div>

    <div class="mt-4">
        <h3>Répondre au message</h3>
        <form action="#" method="post">
            <div class="form-group">
                <label for="reply_content">Votre réponse :</label>
                <textarea class="form-control" id="reply_content" name="reply_content" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
</div>
{% endblock %}
