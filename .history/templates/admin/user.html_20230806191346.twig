{% extends 'admin/base.html.twig' %}

{% block body %}
<div class='container-fluid'>
    <h1>Rendez-vous passés</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Heure</th>
                <th>Utilisateur</th>
                <th>Centre</th>
                <th>Groupe sanguin</th>
                <th>Prise de médication</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for appointment in appointments %}
                <tr>
                    <td>{{ appointment.appointmentDateTime|date('Y-m-d') }}</td>
                    <td>{{ appointment.appointmentDateTime|date('H:i') }}</td>
                    <td>{{ appointment.user.Firstname }} {{ appointment.user.Lastname }}</td>
                    <td>{{ appointment.collectionCenter.name }}</td>
                    <td>{{ appointment.bloodGroup }}</td>
                    <td>{{ appointment.medication ? 'Oui' : 'Non' }}</td>
                    <td>
                        <a href="{{ path('edit_appointment', {'id': appointment.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('delete_appointment', {'id': appointment.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
