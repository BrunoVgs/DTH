{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1>Modifier les informations de la donation</h1>
    <form method="post" action="{{ path('admin_donations_update', {'id': donation.id}) }}">
        <div class="form-group">
            <label for="donor_first_name">Pr√©nom du donneur :</label>
            <input type="text" id="donor_first_name" name="donorFirstName" class="form-control" value="{{ donation.donorFirstName }}" required>
        </div>

        <div class="form-group">
            <label for="donor_last_name">Nom du donneur :</label>
            <input type="text" id="donor_last_name" name="donorLastName" class="form-control" value="{{ donation.donorLastName }}" required>
        </div>

        <div class="form-group">
            <label for="collection_center">Centre de collecte :</label>
            <input type="text" id="collection_center" name="collectionCenter" class="form-control" value="{{ donation.collectionCenter }}" required>
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
</div>
{% endblock %}
