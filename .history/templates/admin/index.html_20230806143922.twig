        <a href="#">Paramètres</a>
    </div>

    <!-- Contenu principal -->
    <div class="main-content">
        <h1>Backoffice</h1>

        <!-- Tableau récapitulatif -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Action</th>
