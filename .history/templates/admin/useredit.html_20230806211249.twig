{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <h1>Modifier les informations de l'utilisateur</h1>
    <form method="post" action="{{ path('admin_user_edit', {'id': user.id}) }}">
        {# Ajoutez ici les champs de formulaire pour éditer les informations de l'utilisateur #}
        <label for="firstname">Prénom :</label>
        <input type="text" id="firstname" name="firstname" value="{{ user.firstname }}" required>

        <label for="lastname">Nom :</label>
        <input type="text" id="lastname" name="lastname" value="{{ user.lastname }}" required>

        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ user.email }}" required>

        <label for="age">Âge :</label>
        <input type="number" id="age" name="age" value="{{ user.age }}" required>

        <label for="weight">Poids :</label>
        <input type="number" id="weight" name="weight" value="{{ user.weight }}" required>

        <label for="height">Taille :</label>
        <input type="number" id="height" name="height" value="{{ user.height }}" required>

        <label for="address">Adresse :</label>
        <input type="text" id="address" name="address" value="{{ user.address }}" required>

        <label for="postalcode">Code Postal :</label>
        <input type="text" id="postalcode" name="postalcode" value="{{ user.postalcode }}" required>

        <label for="city">Ville :</label>
        <input type="text" id="city" name="city" value="{{ user.city }}" required>

        <label for="phonenumber">Téléphone :</label>
        <input type="text" id="phonenumber" name="phonenumber" value="{{ user.phonenumber }}" required>

        <label for="roles">Rôles :</label>
        <input type="text" id="roles" name="roles" value="{{ user.roles|join(', ') }}" required> {# Convert array to string #}

        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
</div>
{% endblock %}
