{% extends 'admin/base.html.twig' %}

{% block body %}
<div class='container-fluid'>
    <h1>Liste des utilisateurs</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Age</th>
                <th>Poids</th>
                <th>Taille</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            {% dump(user.roles['0'])%}
                <tr>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.age }}</td>
                    <td>{{ user.weight }} kg</td>
                    <td>{{ user.height }} cm</td>
                    <td>{{ user.adress }}</td>
                    <td>{{ user.postalcode }}</td>
                    <td>{{ user.city }}</td>
                    <td>{{ user.phonenumber }}</td>
                    <td>{{ user.roles['0'] }}</td> {# Convert array to string #}
                    <td>
                        <!-- Edit link with logo -->
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="edit">
                            <img src="{{ asset('images/back/edit.png') }}" alt="Edit" width="25" height="25" style="margin-right: 15px; margin-left:10px">
                        </a>
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="delete" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce centre de collecte ?')>
                            <img src="{{ asset('images/back/delete.png') }}" alt="Edit" width="25" height="25" >
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
